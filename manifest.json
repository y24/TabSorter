{
  "manifest_version": 3,
  "name": "TabSorter",
  "version": "0.1.0",
  "description": "タブを指定ルールで並び替えるChrome拡張",
  "action": {
    "default_title": "タブを並び替え"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "options_page": "options/index.html",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
